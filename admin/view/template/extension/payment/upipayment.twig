{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
          <ul class="nav nav-tabs" id="tabs">
            <li class="active"><a href="#tab-setting" data-toggle="tab">{{ tab_setting }}</a></li>
            <li><a href="#tab-readme" data-toggle="tab">{{ tab_readme }}</a></li>
            <li><a href="#tab-developer" data-toggle="tab">{{ tab_developer }}</a></li>
          </ul>
          <div class="tab-content">
              <div class="tab-pane active" id="tab-setting">
                  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
                      <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-upi-id"><span data-toggle="tooltip" title="{{ entry_upi_id }}">{{ entry_upi_id }}</span></label>
                        <div class="col-sm-10">
                          <input type="text" name="payment_upipayment_upi_id" value="{{ payment_upipayment_upi_id }}" placeholder="{{ entry_upi_id }}" id="input-upi-id" class="form-control" />
                          {% if error_upi_id %}
                          <div class="text-danger">{{ error_upi_id }}</div>
                          {% endif %}
                        </div>
                      </div>

                      <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-upi-reg-name"><span data-toggle="tooltip" title="{{ entry_upi_reg_name }}">{{ entry_upi_reg_name }}</span></label>
                        <div class="col-sm-10">
                          <input type="text" name="payment_upipayment_upi_reg_name" value="{{ payment_upipayment_upi_reg_name }}" placeholder="{{ entry_upi_reg_name }}" id="input-upi-reg-name" class="form-control" />
                          {% if error_upi_reg_name %}
                          <div class="text-danger">{{ error_upi_reg_name }}</div>
                          {% endif %}
                        </div>
                      </div>

                      <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
                        <div class="col-sm-10">
                          <input type="text" name="payment_upipayment_total" value="{{ payment_upipayment_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
                          {% if error_upi_total %}
                          <div class="text-danger">{{ error_upi_total }}</div>
                          {% endif %}
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-remarks-prefix"><span data-toggle="tooltip" title="{{ help_remarks_prefix }}">{{ entry_remarks_prefix }}</span></label>
                        <div class="col-sm-10">
                          <input type="text" name="payment_upipayment_remarks_prefix" value="{{ payment_upipayment_remarks_prefix }}" placeholder="{{ entry_remarks_prefix }}" id="input-remarks-prefix" class="form-control" />
                          {% if error_remarks_prefix %}
                          <div class="text-danger">{{ error_remarks_prefix }}</div>
                          {% endif %}
                        </div>
                      </div>
                        
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-add-label-text"><span data-toggle="tooltip" title="{{ help_add_label_text }}">{{ entry_add_label_text }}</span></label>
                        <div class="col-sm-10">
                          <select name="payment_upipayment_add_label_text" id="input-add-label-text" class="form-control">
                              {% for addlabeltext in add_label_text %}
                                  {% if addlabeltext == payment_upipayment_add_label_text %}
                                      <option value="{{ addlabeltext }}" selected="selected">{{ addlabeltext }}</option>
                                  {% else %}
                                      <option value="{{ addlabeltext }}">{{ addlabeltext }}</option>
                                  {% endif %}
                              {% endfor %}
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-upi-txn-input"><span data-toggle="tooltip" title="{{ help_upi_txn_input }}">{{ entry_upi_txn_input }}</span></label>
                        <div class="col-sm-10">
                          <select name="payment_upipayment_transaction_input" id="input-upi-txn-input" class="form-control">
                              {% for upitxninput in upi_txn_input %}
                                  {% if upitxninput == payment_upipayment_transaction_input %}
                                      <option value="{{ upitxninput }}" selected="selected">{{ upitxninput }}</option>
                                  {% else %}
                                      <option value="{{ upitxninput }}">{{ upitxninput }}</option>
                                  {% endif %}
                              {% endfor %}
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-qr-show-time"><span data-toggle="tooltip" title="{{ help_qr_show_time }}">{{ entry_qr_show_time }}</span></label>
                        <div class="col-sm-10">
                          <select name="payment_upipayment_qr_show_time" id="input-qr-show-time" class="form-control">
                              {% for showtime in qr_show_time %}
                                  {% if showtime == payment_upipayment_qr_show_time %}
                                      <option value="{{ showtime }}" selected="selected">{{ showtime }}</option>
                                  {% else %}
                                      <option value="{{ showtime }}">{{ showtime }}</option>
                                  {% endif %}
                              {% endfor %}
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
                        <div class="col-sm-10">
                          <select name="payment_upipayment_order_status_id" id="input-order-status" class="form-control">
                              {% for order_status in order_statuses %}
                                  {% if order_status.order_status_id == payment_upipayment_order_status_id %}
                                      <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                  {% else %}
                                      <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                  {% endif %}
                              {% endfor %}
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="cancel-order-status">{{ cancel_order_status }}</label>
                        <div class="col-sm-10">
                          <select name="payment_upipayment_cancel_order_status_id" id="cancel-order-status" class="form-control">
                              {% for order_status in order_statuses %}
                                  {% if order_status.order_status_id == payment_upipayment_cancel_order_status_id %}
                                      <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                  {% else %}
                                      <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                  {% endif %}
                              {% endfor %}
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                        <div class="col-sm-10">
                          <select name="payment_upipayment_geo_zone_id" id="input-geo-zone" class="form-control">
                              <option value="0">{{ text_all_zones }}</option>
                              {% for geo_zone in geo_zones %}
                                  {% if geo_zone.geo_zone_id == payment_upipayment_geo_zone_id %}
                                      <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                                  {% else %}
                                      <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                  {% endif %}
                              {% endfor %}
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                          <select name="payment_upipayment_status" id="input-status" class="form-control">
                              {% if payment_upipayment_status %}
                                  <option value="1" selected="selected">{{ text_enabled }}</option>
                                  <option value="0">{{ text_disabled }}</option>
                              {% else %}
                                  <option value="1">{{ text_enabled }}</option>
                                  <option value="0" selected="selected">{{ text_disabled }}</option>
                              {% endif %}
                          </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="payment_upipayment_sort_order" value="{{ payment_upipayment_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                        </div>
                      </div>
                  </form>
              </div>
                <div class="tab-pane" id="tab-readme">
                    <div class="table-responsive" style="width: 100%; border: 0">
                        {{ text_readme }}
                    </div>
                </div>
                <div class="tab-pane" id="tab-developer">
                    <div class="table-responsive">
                    <table class="table table-bordered table-hover" style="border: 0;width: 100%;vertical-align: middle">
                        <thead>
                        </thead>
                        <tbody align="left" style="border: 0;">
                            <tr style="border: 0;">
                                <td style="border: 0; font-weight: bold">
                                    {{ text_payment_request }}
                                </td>
                            </tr>
                            <tr style="border: 0;">
                                <td style="border: 0;">
                                    <img src="{{ text_developer_upi_qr }} "style="border: 1px solid #EEEEEE">
                                </td>
                            </tr>
                            <tr style="border: 0;">
                                <td style="border: 0;">
                                    <p>{{ text_developer_info }}</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    </div>
                </div>
          </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}